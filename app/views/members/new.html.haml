%h2 Create a member

= error_messages_for @member

= form_for(@member, :action => url(:members) ) do
  %p=text_field :login, :label => 'Login: '
  %p=text_field :firstname, :label => 'Firstname: '
  %p=text_field :lastname, :label => 'Lastname: '
  %p=text_field :email, :label => 'Email: '
  %p=text_field :birthdate, :label => 'Birth date: '
  %p=text_field :occupation, :label => 'Occupation: '
  %p=text_field :address, :label => 'Address: '
  %p=text_field :city, :label => 'City: '
  %p=text_field :phone_number, :label => 'Phone number: '
  %p=text_field :website, :label => 'Website: '
  = partial :form
  %p
    = submit "Create"

= link_to 'Back', url(:members)
